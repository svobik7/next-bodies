{
  "name": "next-bodies",
  "version": "1.0.0",
  "description": "Next.js utility to orchestrate main and slave body of app",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "index.d.ts",
    "index.js"
  ],
  "repository": "https://github.com/svobik7/next-bodies",
  "author": "Jirka Svoboda <svobik7@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prepublish": "yarn clean && yarn build && yarn test",
    "build": "rollup -c",
    "clean": "rm -rf dist > /dev/null",
    "format": "pretty-quick",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "publish:canary": "yarn publish --tag canary"
  },
  "devDependencies": {
    "@types/react": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "next": "^10.2.3",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.50.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.3.12",
    "typescript": "^4.3.2"
  },
  "peerDependencies": {
    "next": "^10.2.3",
    "react": "^17.0.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
